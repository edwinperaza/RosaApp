<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="actionBarStyle">@style/MyTheme.ActionBarStyle</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="actionMenuTextColor">@color/periwinkle_blue</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashBackgroundTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="LoginBackgroundTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="RegistryBackgroundTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="login_edit_text" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/perry_winkle</item>
        <item name="colorControlHighlight">@color/perry_winkle</item>
        <item name="colorControlNormal">@color/perry_winkle</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/perry_winkle</item>
    </style>

    <style name="login_hint_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/perry_winkle</item>
    </style>

</resources>
